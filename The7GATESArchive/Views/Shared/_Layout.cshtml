<!DOCTYPE html>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .form {
        text-align: center
    }
    .button2 {
        background-color: #ddd;
        border: none;
        color: black;
        text-align: center;
        padding-left:5px;
        padding-right:5px;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }
    .button2 {
        background-color: #ddd;
        border: none;
        color: black;
        text-align: center;
        padding-left: 5px;
        padding-right: 5px;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }
    a.my-class {
        color: #ffffff
    }

        a.my-class:active {
            color: #ffffff
        }

        a.my-class:link {
            color: #ffffff
        }

        a.my-class:visited {
            color: #ffffff
        }
</style>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gateway Archives</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body style="font-family:Calibri;background-color:#ffffff;color:red">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:red">
        <div class="navbar-inner">
            <div class="container">
                <button class="button2" data-toggle="collapse" data-target=".nav-collapse">
                    <p style="padding-top:10px">Pages</p>
                </button>
                <a style="color:white">@Html.ActionLink("The Gateway Projects", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("Users", "Index", "User", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("Realtime Updates", "Update", "Home", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("Status", "Status", "Home", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("Gates", "Index", "Gates", new { @class = "my-class" })</li>
                        <li>@Html.ActionLink("Find Help", "Help", "Home", new { @class = "my-class" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <div class="form">
            </div>
            <p style="float:left;color:white">The Gateway Projects - Daviado#3449</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
